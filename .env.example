# Telnet host configuration
TELNET__HOST=127.0.0.1
TELNET__PORT=2323

# Telnet session policies
TELNET__SESSION__MAXCONCURRENTSESSIONS=100
TELNET__SESSION__SESSIONIDLETIMEOUT=00:05:00
TELNET__SESSION__HEARTBEATINTERVAL=00:00:45
TELNET__SESSION__HEARTBEATMESSAGE=[heartbeat]
TELNET__SESSION__BUSYMESSAGE=Server is busy. Please try again later.
TELNET__SESSION__INACTIVITYMESSAGE=Session timed out due to inactivity.
TELNET__SESSION__SESSIONLIFETIME=00:30:00
TELNET__SESSION__LIFETIMEEXCEEDEDMESSAGE=Session reached the maximum allowed duration.

# OpenTelemetry exporter configuration (Grafana Cloud OTLP endpoint)
OTEL_RESOURCE_ATTRIBUTES=service.name=my-app,service.namespace=my-application-group,deployment.environment=production
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp-gateway.example.grafana.net/otlp
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic YOUR_BASE64_ENCODED_CREDENTIAL
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf

# Disable console metrics exporter (optional)
TELEMETRY__CONSOLEEXPORTER__DISABLED=true
